{
  "framework": "nextjs",
  "regions": ["fra1"],
  "functions": {
    "src/app/api/photos/[folder]/route.ts": {
      "maxDuration": 10
    }
  },
  "images": {
    "domains": ["localhost"],
    "formats": ["image/webp", "image/avif"],
    "sizes": [640, 750, 828, 1080, 1200, 1920, 2048, 3840]
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, s-maxage=31536000"
        }
      ]
    }
  ]
}